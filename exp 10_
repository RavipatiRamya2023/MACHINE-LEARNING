{"nbformat":4,"nbformat_minor":0,"metadata":{"colab":{"provenance":[],"authorship_tag":"ABX9TyNSwiq1G0SB5vRSOTItR7i1"},"kernelspec":{"name":"python3","display_name":"Python 3"},"language_info":{"name":"python"}},"cells":[{"cell_type":"code","source":["import pandas as pd\n","from sklearn.feature_extraction.text import CountVectorizer\n","from sklearn.model_selection import train_test_split\n","from sklearn.naive_bayes import MultinomialNB\n","from sklearn.metrics import classification_report\n","\n","# Sample dataset (can also load from CSV)\n","data = {\n","    'label': ['spam', 'ham', 'spam', 'ham', 'spam', 'ham'],\n","    'text': [\n","        'Win money now',\n","        'Hello, how are you?',\n","        'Claim your prize',\n","        'Letâ€™s meet for lunch',\n","        'Win big cash today',\n","        'Are you coming to the meeting?'\n","    ]\n","}\n","\n","df = pd.DataFrame(data)\n","\n","# Encode labels\n","df['label'] = df['label'].map({'ham': 0, 'spam': 1})\n","\n","# Split features and labels\n","X = df['text']\n","y = df['label']\n","\n","# Convert text to feature vectors\n","vectorizer = CountVectorizer()\n","X_vect = vectorizer.fit_transform(X)\n","\n","# Train-test split\n","X_train, X_test, y_train, y_test = train_test_split(X_vect, y, test_size=0.33, random_state=42)\n","\n","# Train Naive Bayes model\n","model = MultinomialNB()\n","model.fit(X_train, y_train)\n","\n","# Predict and evaluate\n","y_pred = model.predict(X_test)\n","print(\"Classification Report:\")\n","print(classification_report(y_test, y_pred, target_names=[\"Ham\", \"Spam\"]))\n"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"789G9O04Zux2","executionInfo":{"status":"ok","timestamp":1743746752442,"user_tz":-330,"elapsed":2356,"user":{"displayName":"ramya ravipati","userId":"11356452001354288215"}},"outputId":"312c823f-0649-44a5-bc4f-6336ee0fb02d"},"execution_count":2,"outputs":[{"output_type":"stream","name":"stdout","text":["Classification Report:\n","      